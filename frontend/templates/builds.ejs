  Build_id: 2,
  CPU_id: 5,
  CPU_name: 'AMD Ryzen 7 5800X',
  Case_id: 4,
  Case_name: 'Kolink Void Gaming Midi Tower',
  MOBO_id: 0,
  MOBO_name: 'MSI MPG B550 Gaming Plus',
  PSU_id: 6,
