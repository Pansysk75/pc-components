<header>
    <a class="logo-container" href="/">
        <img src="/public/logo.png" alt="logo">
        <h1 class="header">PC Components Picker</h1>
    </a>
    <div class="session">
        <% if(session.Username) { %>
            <p class="session-welcome">Welcome, <strong><%= session.Username %></strong></p>
        <% } %>
        
        <div class="session-x">
            <% if(session.Username) { %>
                <button class="button" type="button">
                    <a id="profile-button" class="buttton" href="/user/<%= session.Username %>" text-decoration: none;>Your Profile</a>
                </button>
                <button class="button" type="button">
                    <a id="logout-button" class="buttton" href="/logout" text-decoration: none;>Log Out</a>
                </button>
                
            <% } %>
            <% if(!session.Username) { %>
                <button class="button" type="button">
                    <a id="login-button" class="buttton" target="_top" href="/login" text-decoration: none;>Log In</a>
                </button>
                <button class="button" type="button">
                    <a id="register-button" class="buttton" target="_top" href="/register" text-decoration: none;>Sign Up</a>
                </button>
            <% } %>
        </div>

    </div>
</header>

<link rel="stylesheet" href="../public/partials.css">